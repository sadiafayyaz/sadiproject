<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".user_info.Login_Screen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:background="@drawable/signupbg"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <ProgressBar
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/progressBar2"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/car"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/logo"
            android:layout_marginTop="60dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <EditText
        android:id="@+id/edemail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:drawablePadding="13dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:hint="Email Address" />

    <EditText
        android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/edusername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/round_border"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:drawablePadding="13dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="password" />


    <EditText
        android:id="@+id/cnfrmpass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/pass1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:drawablePadding="13dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/round_border"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="Confirm password" />

    <Button
        android:id="@+id/btnsigup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/pass2"
        android:textColor="#ffffff"
        android:background="@drawable/round_button"
        android:text="Sign Up"
        android:layout_centerHorizontal="true"
        android:padding="8dp"/>

   />
</LinearLayout>

</RelativeLayout>
