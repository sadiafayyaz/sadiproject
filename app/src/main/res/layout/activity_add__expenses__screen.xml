<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expences.Add_Expenses_Screen">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"

                    >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"

                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/card1"
                            android:onClick="moveToNextActivity">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="content_description_media"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/staring" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingTop="15dp"
                                android:text="Purchase spare parts"
                                android:textColor="#2F2585"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"

                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/card2"
                            android:onClick="moveToNextActivity">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="content_description_media"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/tool2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingTop="15dp"
                                android:text="Maintance"
                                android:textColor="#2F2585"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"

                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/card3"
                            android:onClick="moveToNextActivity">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="content_description_media"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/fule1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingTop="15dp"
                                android:text="Fuel"
                                android:textColor="#2F2585"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"

                    >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"

                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/card4"
                            android:onClick="moveToNextActivity">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="content_description_media"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/carclean1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:gravity="center"


                                android:layout_marginBottom="10dp"
                                android:text="Cleaning"
                                android:textColor="#2F2585"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"

                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/card5"
                            android:onClick="moveToNextActivity">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:contentDescription="content_description_media"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/carengine" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:paddingTop="15dp"
                                android:text="engine tuning"
                                android:textColor="#2F2585"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>