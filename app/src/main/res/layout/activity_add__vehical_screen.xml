<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vehical.Add_Vehical_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="5dp">
        <EditText
            android:id="@+id/vehicalname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="textShortMessage"
            android:hint="Enter Your Vehical Name" />
        <EditText
            android:id="@+id/odometerreading"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="textShortMessage"
            android:hint="Enter Current Odometer Reading" />
        <EditText
            android:id="@+id/manufectur"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="Enter car Manufacturer" />
        <EditText
            android:id="@+id/purchasedate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="Enter Purchase Date" />
        <EditText
            android:id="@+id/vmodel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="Enter Vehical Model" />
        <EditText
            android:id="@+id/milagerange"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:hint="Enter Vehical Milage Range (Km)" />
        android:hint="Fuel Limit" />
        <EditText
            android:id="@+id/plateno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:hint="Enter Plate No" />
        <EditText
            android:id="@+id/fulelimit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:ems="10"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:hint="Enter Vehical Fuel limit"/>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/ans1"
            android:textColor="#ffffff"
            android:background="@drawable/round_button"
            android:text="Save Vehical"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            />
    </LinearLayout>
</LinearLayout>