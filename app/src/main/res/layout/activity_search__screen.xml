    </LinearLayout>

    <ListView
        android:layout_marginTop="15dp"
        android:id="@+id/searchList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchList"/>

</RelativeLayout>