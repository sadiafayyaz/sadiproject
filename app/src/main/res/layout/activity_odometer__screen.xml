<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.Odometer_Screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/odometer"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:layout_weight="8"
                app:srcCompat="@drawable/dashboard" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:hint="Odometer Reading"
                app:boxStrokeColor="@color/colorPrimaryDark"
                app:hintTextColor="#00000000"
                app:startIconContentDescription="Odometer Reading"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/meterreading"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:inputType="date"
                    android:layout_marginLeft="5dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="5.5"
            app:srcCompat="@drawable/date1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Current Date"
            android:layout_marginLeft="5dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:hintTextColor="#00000000"
            app:startIconContentDescription="Current Date"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/expenseDate"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_weight="5.5"
            app:srcCompat="@drawable/time1" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Current Time"
            android:layout_marginLeft="5dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:hintTextColor="#00000000"
            app:startIconContentDescription="Current Time"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/expenseTime"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="time"
                android:layout_marginLeft="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"

        >
        <Button
            android:id="@+id/expencesave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:textColor="#ffffff"
            android:background="@drawable/round_button"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Save" />

    </LinearLayout>
    </LinearLayout>
<!--    android:onClick="saveExpence"-->


</androidx.constraintlayout.widget.ConstraintLayout>