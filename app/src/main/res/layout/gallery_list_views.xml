<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:background="#D2D3D5"
            android:id="@+id/gallery_list__view_thumbnail"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:contentDescription="content_description_media"
            android:src="@drawable/ic_add_a_photo_black_camera" />

        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/gallery_list_View_progressbar"/>
    </RelativeLayout>
</RelativeLayout>