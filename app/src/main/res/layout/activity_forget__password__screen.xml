            android:layout_height="45dp"
            android:layout_marginTop="165dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/ans1"
            android:textColor="#ffffff"
