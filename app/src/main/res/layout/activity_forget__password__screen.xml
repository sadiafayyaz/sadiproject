    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/questionlayout"
        android:layout_marginTop="180dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/progressBar3"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/txtup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:textColor="#0480C0"
            android:paddingRight="5dp"
            android:text="You can get Reset Password link by entring your Email Adress."
             />

        <TextView
            android:id="@+id/txtques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/txtup"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:textColor="#0480C0"
            android:paddingRight="5dp"
            android:text="Email Adress"
          />
        <EditText
            android:id="@+id/emailreset"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/txtques"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawablePadding="13dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_action_name"
            android:ems="10"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="Your Ans..." />

