<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add.Add_Files_Screen"
    app:layout_behavior="@string/fab_transformation_scrim_behavior"
    android:id="@+id/notes_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:id="@+id/card1"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:onClick="moveToNextActivity"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/remind1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"

                                        android:text="Refule"
                                        android:textColor="#2F2585"

                                        android:textSize="18sp">

                                    </TextView>


                                    <TextView
                                        android:id="@+id/reminder1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="50dp"
                                        android:ems="10"
                                        android:hint="20 JAN,2020"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="10sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                         <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_notifications_black_24dp"
                            android:layout_marginLeft="310dp"
                            android:id="@+id/notificatin1"

                            ></ImageView>



                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"

                    >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:id="@+id/card2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:onClick="moveToNextActivity"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/remind2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"

                                        android:text="Cleaning"
                                        android:textColor="#2F2585"

                                        android:textSize="18sp">

                                    </TextView>


                                    <TextView
                                        android:id="@+id/reminder2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="50dp"
                                        android:ems="10"
                                        android:hint="30 JAN,2020"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="10sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_notifications_black_24dp"
                            android:layout_marginLeft="310dp"
                            android:id="@+id/notificatin2"

                            ></ImageView>



                    </com.google.android.material.card.MaterialCardView>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"

                    >
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:id="@+id/card3"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:onClick="moveToNextActivity"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/remind3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"

                                        android:text="Repair"
                                        android:textColor="#2F2585"

                                        android:textSize="18sp">

                                    </TextView>


                                    <TextView
                                        android:id="@+id/reminder3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="50dp"
                                        android:ems="10"
                                        android:hint="26 JAN,2020"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="10sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_notifications_black_24dp"
                            android:layout_marginLeft="310dp"
                            android:id="@+id/notificatin3"

                            ></ImageView>



                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>




            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        app:rippleColor="#ffffff"
        android:id="@+id/fabbutton"
        android:background="@color/cardview_dark_background"
        android:onClick="addNotes"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>